	<table class='table table-bordered'>
		<tbody>
			<tr>
				<td rowspan='3' style='width: 15rem;text-align:center;'>
					<img src="{{imageSrc}}" alt='logo' style='margin-top: 12%'>
				</td>
			</tr>
			<tr>
				<td class='poppins-bold text-center' colspan="2" style="font-size:13px;">PT.BUMI LINTAS TAMA</td>				
			</tr>
			<tr>
				<td class='poppins-bold text-center align-middle' colspan="2" style="vertical-align:middle;background-color:blue;font-size:13px;">
					{{#replace "Matriks" "Laporan Plan VS Realization "}}{{maintenanceRealisation.jobName}}{{/replace}}
				</td>
			</tr>			
		</tbody>
	</table>

	<table class='table table-bordered'>
		<tbody>
		<tr>
			<td style='width: 15rem'>NO.FORM</td>
			<td>{{ maintenanceRealisation.formNumber }}</td>
			<td style='width: 15rem'>BULAN/TAHUN</td>
			<td>{{maintenanceRealisation.realisation}}</td>
		</tr>
		<tr>
			<td>NAMA KAPAL</td>
			<td class='poppins-bold' colspan='3'>{{maintenanceRealisation.shipName}}</td>
		</tr>
		</tbody>
	</table>

	<table class='table table-bordered'>
		<thead>
		<tr>
				<th style='width: 10px' rowspan='3'>No.</th>
				<th rowspan='3'>Subject</th>
				<th class='text-center' colspan='{{ headerColumnCount }}'>
					{{#if (eq maintenanceRealisation.maintenancePeriod 'Harian')}}
						Tanggal Perawatan
					{{else}}
						Bulan Perawatan
					{{/if}}
				</th>
		</tr>
		<tr>
			{{#each countDates}}
				<td style='white-space: nowrap; width: 2.500em; text-align: center' colspan="2">{{this}}</td>
			{{/each}}
		</tr>
		<tr>
			{{#each countDates}}
				<td style='white-space: nowrap; width: .5em; text-align: center; font-size:7px;'>P</td>
				<td style='white-space: nowrap; width: .5em; text-align: center; font-size:7px;'>R</td>
			{{/each}}
		</tr>
		</thead>
		<tbody>
			{{#each maintenanceRealisation.maintenancePlanTask}}
				<tr>
					<td>{{#increment @index}}{{/increment}}</td>
					<td>{{ taskName }}</td>
					{{#each this.activity }}
					<td style='text-align: center'>
						{{#if this.isPlanned }}
							<input type='checkbox' checked style="width:8px;height:8px;"/>
						{{/if}}
					</td>
					<td style='text-align: center'>
						{{#if this.isRealized }}
							<input type='checkbox' checked style="width:8px;height:8px;" />
						{{/if}}
					</td>
					{{/each}}
				</tr>
			{{/each}}
		</tbody>
	</table>
	
